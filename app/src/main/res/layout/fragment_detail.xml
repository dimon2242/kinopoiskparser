<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        xmlns:tools="http://schemas.android.com/tools">
        <TextView
            android:id="@+id/fragment_detail_title"
            tools:text="Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="4dp"
            android:layout_below="@id/fragment_detail_title"
            android:id="@+id/fragment_detail_thumb_pic"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_detail_rating"
            android:layout_toRightOf="@id/fragment_detail_thumb_pic"
            android:layout_below="@id/fragment_detail_title"
            tools:text="Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/fragment_detail_rating"
            tools:text="Producer"
            android:padding="4dp"
            android:id="@+id/fragment_detail_producer"
            android:layout_toRightOf="@id/fragment_detail_thumb_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_detail_description"
            android:padding="4dp"
            android:layout_below="@id/fragment_detail_thumb_pic"
            tools:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>